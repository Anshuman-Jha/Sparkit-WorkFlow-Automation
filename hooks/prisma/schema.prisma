generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
}


model Spark {
  id        String     @id @default(uuid())
  triggerId String
  trigger   Trigger? // stors data of type trigger dataabase 
  actions   Action[]
  SparkRun  SparkRun[]
}


model Trigger {
  id        String            @id @default(uuid())
  sparkId   String            @unique
  triggerId String            @unique
  type      AvailableTriggers @relation(fields: [triggerId], references: [id])
  spark     Spark             @relation(fields: [sparkId], references: [id])
}


model AvailableTriggers {
  id       String    @id @default(uuid())
  name     String
  triggers Trigger[] 
}


model Action {
  id       String          @id @default(uuid())
  sparkId  String
  spark    Spark           @relation(fields: [sparkId], references: [id])
  actionId String
  type     AvailableAction @relation(fields: [actionId], references: [id])
}


model AvailableAction {
  id      String   @id @default(uuid())
  name    String
  actions Action[] //Actions/ Available Actions is array of Action 
}


model SparkRun {
  id             String          @id @default(uuid())
  sparkId        String
  metadata       Json
  spark          Spark           @relation(fields: [sparkId], references: [id])
  SparkRunOutbox SparkRunOutbox? 
}


model SparkRunOutbox {
  id         String   @id @default(uuid())
  sparkRunId String   @unique
  sparkRun   SparkRun @relation(fields: [sparkRunId], references: [id])
}
