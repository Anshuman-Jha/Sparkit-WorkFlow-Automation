{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",
    /* Module and Target */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    /* Strictness and Safety */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    /* Node.js Environment */
    "lib": [
      "es2022"
    ],
    "types": [
      "node"
    ],
    /* Code Generation */
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}